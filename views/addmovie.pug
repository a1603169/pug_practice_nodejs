doctype html  
html 
  head 
    title Add movie 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  body 
    h1 New movie
    form(action='/addmovie', method='POST')
      div.form-group
        label(for="exampleTitleInput") 
          input(type="text", name="title", placeholder="Title", class="form-control")
      div.form-group
        label(for="exampleDirectorInput") 
          input(type="text", name="director", placeholder="Director", class="form-control")
      div.form-group 
        label(for="exampleYearInput") 
          input(type="number", name="year", placeholder="Year", class="form-control")
      div.form-group 
        input(type="submit", name="submission", value="Add", class="btn btn-primary")